# Configurações do Servidor
PORT=3001
NODE_ENV=development

# PushinPay API Configuration
PUSHINPAY_API_KEY=your_pushinpay_api_key_here
PUSHINPAY_BASE_URL=https://api.pushinpay.com.br

# Webhook Configuration
WEBHOOK_BASE_URL=https://your-domain.com

# Database Configuration (SQLite - arquivo será criado automaticamente)
DB_PATH=./database/pix_transactions.db

# CORS Configuration
CORS_ORIGIN=http://localhost:8080,http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
HELMET_ENABLED=true

# Logging
LOG_LEVEL=info

# Environment específico para PushinPay
# production | sandbox
PUSHINPAY_ENVIRONMENT=sandbox