# Server Configuration
NODE_ENV=development
PORT=3001

# PushinPay Configuration
PUSHINPAY_API_KEY=your_api_key_here
PUSHINPAY_CLIENT_ID=your_client_id_here
PUSHINPAY_BASE_URL=https://api.pushinpay.com.br
PUSHINPAY_ENVIRONMENT=sandbox

# Webhook Configuration
WEBHOOK_BASE_URL=https://your-domain.com

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Database Configuration (SQLite - arquivo ser√° criado automaticamente)
DB_FILE_PATH=/tmp/database.db
DATA_DIR=/tmp

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
HELMET_ENABLED=true
LOG_LEVEL=info